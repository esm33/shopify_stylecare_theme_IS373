{% comment %}
  StyleCare Contact Hub Section
  Modern grid layout with contact cards
{% endcomment %}

<div class="contact-hub-section">
  <div class="contact-hub-container">
    <!-- Hero Header -->
    <div class="contact-hub-header">
      <h1 class="contact-hub-title">{{ section.settings.title }}</h1>
      <p class="contact-hub-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <!-- Contact Cards Grid -->
    <div class="contact-cards-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'contact_card' %}
            <a href="{{ block.settings.link }}" class="contact-card" {{ block.shopify_attributes }}>
              <div class="contact-card-icon">
                <i class="fas fa-{{ block.settings.icon }}"></i>
              </div>
              <h3 class="contact-card-title">{{ block.settings.card_title }}</h3>
              <p class="contact-card-description">{{ block.settings.description }}</p>
              <div class="contact-card-cta">
                {{ block.settings.cta_text }}
              </div>
            </a>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% style %}
  .contact-hub-section {
    background: linear-gradient(135deg, #fdfbfb 0%, #f7f4f4 100%);
    padding: 80px 20px;
    min-height: 100vh;
  }

  .contact-hub-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .contact-hub-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .contact-hub-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-charcoal, #2d2d2d);
    margin-bottom: 15px;
    letter-spacing: -0.02em;
  }

  .contact-hub-subtitle {
    font-size: 1.2rem;
    color: var(--color-grey, #666);
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .contact-card {
    background: white;
    border-radius: 20px;
    padding: 50px 40px;
    text-align: center;
    transition: all 0.4s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .contact-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-blush, #f4a8b8) 0%, var(--color-rose, #e88ea7) 100%);
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }

  .contact-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(244, 168, 184, 0.25);
  }

  .contact-card:hover::before {
    transform: scaleX(1);
  }

  .contact-card-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #fff5f7 0%, #ffffff 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 25px;
    transition: all 0.4s ease;
  }

  .contact-card:hover .contact-card-icon {
    background: linear-gradient(135deg, var(--color-blush, #f4a8b8) 0%, var(--color-rose, #e88ea7) 100%);
  }

  .contact-card-icon i {
    font-size: 2rem;
    color: var(--color-rose, #e88ea7);
    transition: all 0.4s ease;
  }

  .contact-card:hover .contact-card-icon i {
    color: white;
    transform: scale(1.1);
  }

  .contact-card-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-charcoal, #2d2d2d);
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .contact-card-description {
    font-size: 1rem;
    color: var(--color-grey, #666);
    line-height: 1.6;
    margin-bottom: 25px;
    flex-grow: 1;
  }

  .contact-card-cta {
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--color-rose, #e88ea7);
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 12px 30px;
    border: 2px solid var(--color-rose, #e88ea7);
    border-radius: 30px;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .contact-card:hover .contact-card-cta {
    background: linear-gradient(135deg, var(--color-blush, #f4a8b8) 0%, var(--color-rose, #e88ea7) 100%);
    color: white;
    border-color: transparent;
  }

  @media (max-width: 768px) {
    .contact-hub-section {
      padding: 60px 20px;
    }

    .contact-hub-title {
      font-size: 2.2rem;
    }

    .contact-hub-subtitle {
      font-size: 1rem;
    }

    .contact-cards-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .contact-card {
      padding: 40px 30px;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .contact-cards-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
{% endstyle %}

