{% comment %}
  StyleCare Testimonial Carousel Section
  Displays customer testimonials in a beautiful carousel
{% endcomment %}

<section class="testimonials-section">
  <div class="testimonials-container">
    <!-- Section Header -->
    <div class="testimonials-header">
      <h2 class="testimonials-title">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="testimonials-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <!-- Testimonial Carousel -->
    <div class="testimonials-carousel-wrapper">
      <div class="testimonials-carousel" id="testimonialsCarousel">
        {% for block in section.blocks %}
          <div class="testimonial-card" {{ block.shopify_attributes }}>
            <div class="testimonial-content">
              <!-- Quote Icon -->
              <div class="quote-icon">
                <i class="fas fa-quote-left"></i>
              </div>

              <!-- Star Rating -->
              {% if block.settings.rating > 0 %}
                <div class="testimonial-rating">
                  {% for i in (1..block.settings.rating) %}
                    <i class="fas fa-star"></i>
                  {% endfor %}
                </div>
              {% endif %}

              <!-- Testimonial Text -->
              {% if block.settings.quote != blank %}
                <p class="testimonial-text">"{{ block.settings.quote }}"</p>
              {% endif %}

              <!-- Customer Info -->
              <div class="customer-info">
                <div class="customer-avatar">
                  <i class="fas fa-user"></i>
                </div>

                <div class="customer-details">
                  {% if block.settings.author_name != blank %}
                    <h4 class="customer-name">{{ block.settings.author_name }}</h4>
                  {% endif %}
                  {% if block.settings.author_location != blank %}
                    <p class="customer-location">{{ block.settings.author_location }}</p>
                  {% endif %}
                </div>
              </div>

              <!-- Verified Badge -->
              <div class="verified-purchase">
                <i class="fas fa-check-circle"></i>
                <span>Verified Customer</span>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Navigation Arrows -->
      <button class="carousel-arrow prev-arrow" aria-label="Previous testimonial">
        <i class="fas fa-chevron-left"></i>
      </button>
      <button class="carousel-arrow next-arrow" aria-label="Next testimonial">
        <i class="fas fa-chevron-right"></i>
      </button>

      <!-- Dots Navigation -->
      <div class="carousel-dots" id="carouselDots"></div>
    </div>
  </div>
</section>

{% style %}
  .testimonials-section {
    padding: 100px 20px;
    background: linear-gradient(180deg, #ffffff 0%, #fdfbfb 100%);
    overflow: hidden;
  }

  .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .testimonials-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    color: var(--color-charcoal, #2d2d2d);
    margin-bottom: 15px;
    letter-spacing: -0.02em;
  }

  .testimonials-subtitle {
    font-size: 1.2rem;
    color: var(--color-grey, #666);
    max-width: 700px;
    margin: 0 auto;
  }

  .testimonials-carousel-wrapper {
    position: relative;
    padding: 0 60px;
  }

  .testimonials-carousel {
    display: flex;
    transition: transform 0.5s ease-in-out;
    gap: 30px;
  }

  .testimonial-card {
    min-width: 100%;
    flex-shrink: 0;
    background: white;
    border-radius: 24px;
    padding: 50px 40px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    position: relative;
    overflow: hidden;
  }

  .testimonial-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 6px;
    background: linear-gradient(90deg, 
      var(--color-blush, #f4a8b8) 0%, 
      var(--color-rose, #e88ea7) 50%, 
      var(--color-blush, #f4a8b8) 100%);
  }

  .testimonial-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 25px;
  }

  .quote-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--color-blush, #f4a8b8) 0%, var(--color-rose, #e88ea7) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
  }

  .testimonial-rating {
    display: flex;
    gap: 5px;
  }

  .testimonial-rating i {
    color: #ffc107;
    font-size: 1.3rem;
  }

  .testimonial-text {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--color-charcoal, #2d2d2d);
    font-style: italic;
    max-width: 800px;
    margin: 0;
  }

  .customer-info {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-top: 15px;
  }

  .customer-avatar {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-blush, #f4a8b8) 0%, var(--color-rose, #e88ea7) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.8rem;
  }

  .customer-details {
    text-align: left;
  }

  .customer-name {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-charcoal, #2d2d2d);
    margin: 0 0 5px 0;
  }

  .customer-location {
    font-size: 0.95rem;
    color: var(--color-grey, #666);
    margin: 0;
  }

  .verified-purchase {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, #d4fc79 0%, #96e6a1 100%);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    color: #2d5016;
  }

  .verified-purchase i {
    font-size: 1rem;
  }

  /* Carousel Navigation */
  .carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: white;
    border: 2px solid var(--color-blush, #f4a8b8);
    color: var(--color-rose, #e88ea7);
    font-size: 1.2rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    z-index: 10;
  }

  .carousel-arrow:hover {
    background: linear-gradient(135deg, var(--color-blush, #f4a8b8) 0%, var(--color-rose, #e88ea7) 100%);
    color: white;
    transform: translateY(-50%) scale(1.1);
  }

  .prev-arrow {
    left: 0;
  }

  .next-arrow {
    right: 0;
  }

  /* Dots Navigation */
  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 40px;
  }

  .carousel-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #ddd;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .carousel-dot.active {
    background: linear-gradient(135deg, var(--color-blush, #f4a8b8) 0%, var(--color-rose, #e88ea7) 100%);
    width: 30px;
    border-radius: 6px;
  }

  .carousel-dot:hover {
    background: var(--color-blush, #f4a8b8);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .testimonials-section {
      padding: 60px 15px;
    }

    .testimonials-carousel-wrapper {
      padding: 0 50px;
    }

    .testimonial-card {
      padding: 40px 25px;
    }

    .testimonial-text {
      font-size: 1.1rem;
    }

    .carousel-arrow {
      width: 40px;
      height: 40px;
      font-size: 1rem;
    }

    .customer-info {
      flex-direction: column;
      text-align: center;
    }

    .customer-details {
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .testimonials-carousel-wrapper {
      padding: 0 40px;
    }

    .carousel-arrow {
      width: 35px;
      height: 35px;
    }
  }
{% endstyle %}

<script>
document.addEventListener('DOMContentLoaded', function() {
  const carousel = document.getElementById('testimonialsCarousel');
  if (!carousel) return;

  const cards = carousel.querySelectorAll('.testimonial-card');
  const dotsContainer = document.getElementById('carouselDots');
  const prevArrow = document.querySelector('.prev-arrow');
  const nextArrow = document.querySelector('.next-arrow');
  
  let currentIndex = 0;
  const totalCards = cards.length;
  
  if (totalCards === 0) return;
  
  // Create dots
  for (let i = 0; i < totalCards; i++) {
    const dot = document.createElement('button');
    dot.classList.add('carousel-dot');
    dot.setAttribute('aria-label', `Go to testimonial ${i + 1}`);
    if (i === 0) dot.classList.add('active');
    dot.addEventListener('click', () => goToSlide(i));
    dotsContainer.appendChild(dot);
  }
  
  const dots = dotsContainer.querySelectorAll('.carousel-dot');
  
  function updateCarousel() {
    const offset = -currentIndex * 100;
    carousel.style.transform = `translateX(${offset}%)`;
    
    // Update dots
    dots.forEach((dot, index) => {
      dot.classList.toggle('active', index === currentIndex);
    });
  }
  
  function goToSlide(index) {
    currentIndex = index;
    updateCarousel();
  }
  
  function nextSlide() {
    currentIndex = (currentIndex + 1) % totalCards;
    updateCarousel();
  }
  
  function prevSlide() {
    currentIndex = (currentIndex - 1 + totalCards) % totalCards;
    updateCarousel();
  }
  
  // Event listeners
  if (nextArrow) nextArrow.addEventListener('click', nextSlide);
  if (prevArrow) prevArrow.addEventListener('click', prevSlide);
  
  // Auto-play (optional)
  let autoplayInterval = setInterval(nextSlide, 5000);
  
  // Pause autoplay on hover
  carousel.addEventListener('mouseenter', () => {
    clearInterval(autoplayInterval);
  });
  
  carousel.addEventListener('mouseleave', () => {
    autoplayInterval = setInterval(nextSlide, 5000);
  });
  
  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') prevSlide();
    if (e.key === 'ArrowRight') nextSlide();
  });
  
  // Touch swipe support
  let touchStartX = 0;
  let touchEndX = 0;
  
  carousel.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
  });
  
  carousel.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  });
  
  function handleSwipe() {
    if (touchStartX - touchEndX > 50) {
      nextSlide();
    }
    if (touchEndX - touchStartX > 50) {
      prevSlide();
    }
  }
});
</script>

