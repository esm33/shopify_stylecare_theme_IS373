{% comment %}
  FAQ Section - StyleCare
  Split layout with banner image and accordion FAQs
{% endcomment %}

<section class="faq-section" id="faq-{{ section.id }}">
  <div class="faq-split-container">
    <!-- Left Half - Banner with Image or Gradient -->
    <div class="faq-banner" 
         {% if section.settings.banner_image %}
           style="background-image: url('{{ section.settings.banner_image | image_url: width: 1200 }}');"
         {% endif %}>
      <div class="faq-banner-overlay">
        <div class="faq-icon">
          <i class="fas fa-question-circle"></i>
        </div>
        {% if section.settings.title != blank %}
          <h2 class="faq-banner-title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="faq-banner-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    </div>

    <!-- Right Half - FAQ Accordion -->
    <div class="faq-content">
      <div class="faq-container">
        {% for block in section.blocks %}
          <div class="faq-item" {{ block.shopify_attributes }}>
            <button class="faq-question" aria-expanded="false" type="button">
              <span>{{ block.settings.question }}</span>
              <i class="fas fa-chevron-down"></i>
            </button>
            <div class="faq-answer">
              <div class="faq-answer-content">
                {{ block.settings.answer }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% style %}
  .faq-section {
    padding: 0;
    background: white;
  }

  .faq-split-container {
    display: flex;
    min-height: 600px;
  }

  /* Left Half - Banner */
  .faq-banner {
    flex: 1;
    background: linear-gradient(135deg, 
      #667eea 0%, 
      #764ba2 50%,
      #f093fb 100%);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .faq-banner-overlay {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 25px;
    padding: 60px 40px;
    text-align: center;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(5px);
    width: 100%;
    height: 100%;
  }

  .faq-icon {
    width: 100px;
    height: 100px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 3.5rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .faq-banner-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: white;
    margin: 0;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    letter-spacing: -0.02em;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  }

  .faq-banner-subtitle {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.95);
    max-width: 400px;
    margin: 0;
    line-height: 1.6;
    text-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
    font-weight: 400;
  }

  /* Right Half - Content */
  .faq-content {
    flex: 1;
    display: flex;
    align-items: center;
    padding: 60px 40px;
    background: white;
  }

  .faq-container {
    width: 100%;
    max-width: 600px;
  }

  .faq-item {
    background: white;
    border: 2px solid #f0f0f0;
    border-radius: 12px;
    margin-bottom: 15px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    border-color: var(--color-blush, #f4a8b8);
    box-shadow: 0 4px 15px rgba(244, 168, 184, 0.15);
  }

  .faq-question {
    width: 100%;
    padding: 20px 25px;
    background: transparent;
    border: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 15px;
    cursor: pointer;
    text-align: left;
    font-size: 1.05rem;
    font-weight: 600;
    color: var(--color-charcoal, #2d2d2d);
    transition: all 0.3s ease;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    letter-spacing: -0.01em;
    line-height: 1.5;
  }

  .faq-question:hover {
    color: var(--color-rose, #e88ea7);
  }

  .faq-question i {
    font-size: 0.9rem;
    color: var(--color-blush, #f4a8b8);
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .faq-item.active .faq-question i {
    transform: rotate(180deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .faq-item.active .faq-answer {
    max-height: 500px;
  }

  .faq-answer-content {
    padding: 0 25px 20px;
    color: var(--color-grey, #666);
    line-height: 1.7;
    font-size: 1rem;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  }

  .faq-answer-content p {
    margin: 0 0 12px 0;
  }

  .faq-answer-content p:last-child {
    margin-bottom: 0;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .faq-split-container {
      flex-direction: column;
    }

    .faq-banner {
      min-height: 300px;
    }

    .faq-content {
      padding: 50px 30px;
    }

    .faq-banner-title {
      font-size: 2.2rem;
    }

    .faq-banner-subtitle {
      font-size: 1rem;
    }
  }

  @media (max-width: 768px) {
    .faq-content {
      padding: 40px 20px;
    }

    .faq-question {
      padding: 15px 20px;
      font-size: 1rem;
    }

    .faq-answer-content {
      padding: 0 20px 15px;
      font-size: 0.95rem;
    }

    .faq-icon {
      width: 80px;
      height: 80px;
      font-size: 2.5rem;
    }

    .faq-banner-title {
      font-size: 1.8rem;
    }

    .faq-banner-subtitle {
      font-size: 0.95rem;
    }
  }
{% endstyle %}

