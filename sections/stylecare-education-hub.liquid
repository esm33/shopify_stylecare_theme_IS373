  margin-bottom: 100px;
}

.section-header {
  text-align: center;
  margin-bottom: 60px;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 15px;
  color: #2d3748;
}

.section-description {
  font-size: 1.1rem;
  color: #718096;
  max-width: 600px;
  margin: 0 auto;
}

/* Article Cards */
.articles-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 30px;
}

.article-card {
  background: white;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  cursor: pointer;
}

.article-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.article-image {
  position: relative;
  height: 240px;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.article-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.article-card:hover .article-img {
  transform: scale(1.1);
}

.article-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 4rem;
  color: rgba(255, 255, 255, 0.5);
}

.article-badge {
  position: absolute;
  top: 15px;
  right: 15px;
  background: rgba(255, 255, 255, 0.95);
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 600;
  color: #667eea;
}

.article-content {
  padding: 25px;
}

.article-category {
  display: flex;
  align-items: center;
  gap: 8px;
  color: #667eea;
  font-weight: 600;
  font-size: 0.9rem;
  margin-bottom: 12px;
}

.article-title {
  font-size: 1.4rem;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 12px;
  line-height: 1.4;
}

.article-excerpt {
  color: #718096;
  line-height: 1.6;
  margin-bottom: 20px;
}

.article-cta {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: #667eea;
  font-weight: 600;
  text-decoration: none;
  transition: gap 0.3s ease;
}

.article-cta:hover {
  gap: 12px;
}

/* Video Cards */
.videos-grid,
.premium-videos-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 30px;
}

.video-card {
  background: white;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.video-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.video-thumbnail {
  position: relative;
  height: 200px;
  overflow: hidden;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.thumbnail-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 4rem;
  color: rgba(255, 255, 255, 0.5);
}

.play-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 70px;
  height: 70px;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.8rem;
  color: #667eea;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.video-card:hover .play-overlay {
  opacity: 1;
}

.video-duration {
  position: absolute;
  bottom: 15px;
  left: 15px;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 6px 12px;
  border-radius: 8px;
  font-size: 0.85rem;
  font-weight: 600;
}

.free-badge {
  position: absolute;
  top: 15px;
  right: 15px;
  background: #48bb78;
  color: white;
  padding: 6px 14px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0.5px;
}

.premium-badge {
  position: absolute;
  top: 15px;
  right: 15px;
  background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
  color: white;
  padding: 6px 14px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0.5px;
}

.video-content {
  padding: 25px;
}

.video-category {
  display: flex;
  align-items: center;
  gap: 8px;
  color: #f5576c;
  font-weight: 600;
  font-size: 0.9rem;
  margin-bottom: 12px;
}

.video-title {
  font-size: 1.3rem;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 12px;
  line-height: 1.4;
}

.video-description {
  color: #718096;
  line-height: 1.6;
  margin-bottom: 15px;
  font-size: 0.95rem;
}

.video-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-top: 15px;
  border-top: 1px solid #e2e8f0;
  font-size: 0.85rem;
  color: #718096;
}

.video-meta span {
  display: flex;
  align-items: center;
  gap: 6px;
}

.video-cta {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 12px 24px;
  border-radius: 12px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  width: 100%;
  justify-content: center;
}

.video-cta:hover {
  transform: scale(1.05);
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
}

/* Premium Section */
.premium-section {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 20%, #ffecd2 100%);
  padding: 60px 40px;
  border-radius: 30px;
  margin-top: 80px;
}

.premium-header {
  position: relative;
}

.premium-icon {
  font-size: 3rem;
  color: #f6ad55;
  margin-bottom: 20px;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.premium-video.locked .thumbnail-img.blurred,
.premium-video.locked .video-placeholder.blurred {
  filter: blur(10px);
}

.lock-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 2rem;
  gap: 10px;
}

.lock-overlay span {
  font-size: 0.9rem;
  font-weight: 600;
  letter-spacing: 1px;
}

.premium-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 15px;
  padding-top: 15px;
  border-top: 1px solid #e2e8f0;
}

.price-tag {
  flex-shrink: 0;
}

.price {
  font-size: 1.8rem;
  font-weight: 700;
  color: #2d3748;
}

.add-to-cart-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  background: linear-gradient(135deg, #f6ad55 0%, #ed8936 100%);
  color: white;
  border: none;
  padding: 14px 24px;
  border-radius: 12px;
  font-weight: 700;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.add-to-cart-btn:hover {
  transform: scale(1.05);
  box-shadow: 0 8px 20px rgba(237, 137, 54, 0.4);
}

/* Responsive Design */
@media (max-width: 768px) {
  .hero-title {
    font-size: 2.2rem;
  }

  .hero-subtitle {
    font-size: 1rem;
  }

  .section-title {
    font-size: 2rem;
  }

  .articles-grid,
  .videos-grid,
  .premium-videos-grid {
    grid-template-columns: 1fr;
  }

  .premium-actions {
    flex-direction: column;
  }

  .price-tag {
    width: 100%;
    text-align: center;
  }

  .add-to-cart-btn {
    width: 100%;
  }
}

@media (min-width: 769px) and (max-width: 1024px) {
  .articles-grid,
  .videos-grid,
  .premium-videos-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Loading state for add to cart button */
.add-to-cart-btn.loading {
  pointer-events: none;
  opacity: 0.7;
}

.add-to-cart-btn.loading i {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.add-to-cart-btn.added {
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Get all add to cart buttons
  const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
  
  addToCartButtons.forEach(button => {
    button.addEventListener('click', async function(e) {
      e.preventDefault();
      
      const productId = this.getAttribute('data-product-id');
      const videoCard = this.closest('.video-card');
      const videoTitle = videoCard ? videoCard.querySelector('.video-title')?.textContent : 'Premium Video';
      
      // Add loading state
      const originalText = this.innerHTML;
      this.classList.add('loading');
      this.innerHTML = '<i class="fas fa-spinner"></i> Adding...';
      
      // Validate product ID
      if (!productId || productId === '') {
        this.classList.remove('loading');
        this.innerHTML = originalText;
        alert('Product ID not configured. Please add a variant ID in the theme editor.');
        return;
      }
      
      // Convert product ID to number (Shopify API requires numeric ID)
      const numericProductId = parseInt(productId, 10);
      
      console.log('üõí Adding to cart');
      console.log('  Variant ID (string):', productId);
      console.log('  Variant ID (number):', numericProductId);
      
      try {
        // Add item to cart using Shopify Cart API (using FormData like the theme does)
        const formData = new FormData();
        formData.append('id', numericProductId);
        formData.append('quantity', '1');
        
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          body: formData
        });
        
        if (!response.ok) {
          // Get error details from response
          const errorData = await response.json().catch(() => ({}));
          console.error('‚ùå Cart API Error:', {
            status: response.status,
            statusText: response.statusText,
            productId: productId,
            numericProductId: numericProductId,
            error: errorData
          });
          
          // Show specific error message
          let errorMessage = 'Failed to add item to cart.';
          if (response.status === 422) {
            errorMessage = `Variant ID "${productId}" is invalid or the product is unavailable. Please check:\n\n1. The product exists in Shopify\n2. You're using the VARIANT ID (not product ID)\n3. The variant is available and not sold out\n4. The product is published to your Online Store`;
          }
          
          throw new Error(errorMessage);
        }
        
        const data = await response.json();
        console.log('‚úÖ Item added to cart:', data);
        
        // Update cart count if cart icon exists
        const cartCountSelectors = [
          '[ref="cartBubbleCount"]',
          '.cart-bubble__text-count',
          '.cart-count',
          '.cart-icon__count',
          '[data-cart-count]'
        ];
        
        let cartCount = null;
        for (const selector of cartCountSelectors) {
          cartCount = document.querySelector(selector);
          if (cartCount) break;
        }
        
        if (cartCount) {
          // Fetch updated cart to get total item count
          const cartResponse = await fetch('/cart.js');
          const cart = await cartResponse.json();
          cartCount.textContent = cart.item_count;
          cartCount.classList.remove('hidden');
          
          const cartBubble = document.querySelector('.cart-bubble');
          if (cartBubble) {
            cartBubble.classList.remove('visually-hidden');
          }
        }
        
        // Show success state
        this.classList.remove('loading');
        this.classList.add('added');
        this.innerHTML = '<i class="fas fa-check"></i> Added to Cart!';
        
        // Trigger cart drawer to open if it exists
        const cartDrawer = document.querySelector('cart-drawer');
        if (cartDrawer && typeof cartDrawer.open === 'function') {
          cartDrawer.open();
        }
        
        // Dispatch custom event for other cart components
        document.dispatchEvent(new CustomEvent('cart:updated', {
          detail: { cart: data }
        }));
        
        // Reset button after 2 seconds
        setTimeout(() => {
          this.classList.remove('added');
          this.innerHTML = originalText;
        }, 2000);
        
      } catch (error) {
        console.error('‚ùå Error adding to cart:', error);
        
        // Show error state
        this.classList.remove('loading');
        this.innerHTML = '<i class="fas fa-exclamation-circle"></i> Error';
        
        alert(error.message || 'Failed to add item to cart. Please try again.');
        
        // Reset button after 3 seconds
        setTimeout(() => {
          this.innerHTML = originalText;
        }, 3000);
      }
    });
  });
});
</script>

