{% comment %}
  Fashion Education Hub Section
  - Article Cards (Free educational content)
  - Free Video Tutorials
  - Premium Locked Videos (Purchase to unlock)
{% endcomment %}

<div class="education-hub-section">
  <div class="page-width">
    
    {%- if section.settings.show_hero -%}
    <div class="education-hero">
      <div class="hero-content">
        <h1 class="hero-title">{{ section.settings.hero_title }}</h1>
        <p class="hero-subtitle">{{ section.settings.hero_subtitle }}</p>
      </div>
    </div>
    {%- endif -%}

    <!-- Educational Articles Section -->
    <div class="education-section articles-section">
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.articles_title }}</h2>
        <p class="section-description">{{ section.settings.articles_description }}</p>
      </div>
      
      <div class="articles-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'article_card' -%}
            <div class="article-card" {{ block.shopify_attributes }}>
              <div class="article-image">
                {%- if block.settings.article_image != blank -%}
                  {{ block.settings.article_image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'article-img' }}
                {%- else -%}
                  <div class="article-placeholder">
                    <i class="fas fa-book-open"></i>
                  </div>
                {%- endif -%}
                <span class="article-badge">{{ block.settings.reading_time }} min read</span>
              </div>
              <div class="article-content">
                <div class="article-category">
                  <i class="fas {{ block.settings.category_icon }}"></i>
                  <span>{{ block.settings.category }}</span>
                </div>
                <h3 class="article-title">{{ block.settings.article_title }}</h3>
                <p class="article-excerpt">{{ block.settings.article_excerpt }}</p>
                <a href="{{ block.settings.article_link }}" class="article-cta">
                  Read Article <i class="fas fa-arrow-right"></i>
                </a>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    <!-- Free Video Tutorials Section -->
    <div class="education-section videos-section">
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.videos_title }}</h2>
        <p class="section-description">{{ section.settings.videos_description }}</p>
      </div>
      
      <div class="videos-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'free_video' -%}
            <div class="video-card free-video" {{ block.shopify_attributes }}>
              <div class="video-thumbnail">
                {%- if block.settings.video_thumbnail != blank -%}
                  {{ block.settings.video_thumbnail | image_url: width: 600 | image_tag: loading: 'lazy', class: 'thumbnail-img' }}
                {%- else -%}
                  <div class="video-placeholder">
                    <i class="fas fa-play-circle"></i>
                  </div>
                {%- endif -%}
                <div class="play-overlay">
                  <i class="fas fa-play"></i>
                </div>
                <span class="video-duration">{{ block.settings.video_duration }}</span>
                <span class="free-badge">FREE</span>
              </div>
              <div class="video-content">
                <div class="video-category">
                  <i class="fas {{ block.settings.video_category_icon }}"></i>
                  <span>{{ block.settings.video_category }}</span>
                </div>
                <h3 class="video-title">{{ block.settings.video_title }}</h3>
                <p class="video-description">{{ block.settings.video_description }}</p>
                <div class="video-meta">
                  <span class="views"><i class="fas fa-eye"></i> {{ block.settings.views }}</span>
                  <span class="level">
                    <i class="fas fa-signal"></i> {{ block.settings.difficulty_level }}
                  </span>
                </div>
                <a href="{{ block.settings.video_link }}" class="video-cta">
                  Watch Now <i class="fas fa-play"></i>
                </a>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    <!-- Premium Locked Videos Section -->
    <div class="education-section premium-section">
      <div class="section-header premium-header">
        <div class="premium-icon">
          <i class="fas fa-crown"></i>
        </div>
        <h2 class="section-title">{{ section.settings.premium_title }}</h2>
        <p class="section-description">{{ section.settings.premium_description }}</p>
      </div>
      
      <div class="premium-videos-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'premium_video' -%}
            <div class="video-card premium-video locked" {{ block.shopify_attributes }}>
              <div class="video-thumbnail">
                {%- if block.settings.premium_thumbnail != blank -%}
                  {{ block.settings.premium_thumbnail | image_url: width: 600 | image_tag: loading: 'lazy', class: 'thumbnail-img blurred' }}
                {%- else -%}
                  <div class="video-placeholder blurred">
                    <i class="fas fa-video"></i>
                  </div>
                {%- endif -%}
                <div class="lock-overlay">
                  <i class="fas fa-lock"></i>
                  <span>Premium Content</span>
                </div>
                <span class="video-duration">{{ block.settings.premium_duration }}</span>
                <span class="premium-badge">PREMIUM</span>
              </div>
              <div class="video-content">
                <div class="video-category">
                  <i class="fas {{ block.settings.premium_category_icon }}"></i>
                  <span>{{ block.settings.premium_category }}</span>
                </div>
                <h3 class="video-title">{{ block.settings.premium_title_text }}</h3>
                <p class="video-description">{{ block.settings.premium_description }}</p>
                <div class="video-meta">
                  <span class="instructor">
                    <i class="fas fa-user-graduate"></i> {{ block.settings.instructor_name }}
                  </span>
                  <span class="level">
                    <i class="fas fa-signal"></i> {{ block.settings.premium_level }}
                  </span>
                </div>
                <div class="premium-actions">
                  <div class="price-tag">
                    <span class="price">{{ block.settings.video_price }}</span>
                  </div>
                  <button class="add-to-cart-btn" data-product-id="{{ block.settings.product_id }}">
                    <i class="fas fa-shopping-cart"></i> Add to Cart
                  </button>
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

  </div>
</div>

<style>
