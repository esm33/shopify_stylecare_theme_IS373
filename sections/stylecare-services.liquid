{%- comment -%}
  Services Section - Converted from legsontheground.com
  Features: Service cards with icons, pricing, features list, and CTA buttons
{%- endcomment -%}

<section class="services section" id="services">
  <div class="container">
    {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
      <div class="section-header">
        {% if section.settings.section_title != blank %}
          <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="services-grid grid grid-auto-fit-lg">
      {% for block in section.blocks %}
        <div class="service-card card flex flex-col items-center" {{ block.shopify_attributes }}>
          {% if block.settings.badge != blank %}
            <span class="service-badge badge badge--sale">{{ block.settings.badge }}</span>
          {% endif %}
          
          {% if block.settings.icon != blank %}
            <div class="service-icon icon-badge icon-badge--medium">
              <i class="fas {{ block.settings.icon }}"></i>
            </div>
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h3 class="service-title">{{ block.settings.title }}</h3>
          {% endif %}
          
          {% if block.settings.price != blank %}
            <p class="service-price">{{ block.settings.price }}</p>
          {% endif %}
          
          {% if block.settings.description != blank %}
            <p class="service-description">{{ block.settings.description }}</p>
          {% endif %}
          
          {% if block.settings.features != blank %}
            <ul class="service-features">
              {% assign features = block.settings.features | newline_to_br | split: '<br />' %}
              {% for feature in features %}
                {% if feature != blank %}
                  <li class="flex items-start">
                    <i class="fas fa-check"></i>
                    {{ feature | strip }}
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          {% endif %}
          
          {% if block.settings.cta_text != blank %}
            <a href="{{ block.settings.cta_link | default: '#contact' }}" class="btn btn-outline button--outline">
              {{ block.settings.cta_text }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
  .services {
    padding: var(--space-7xl) var(--space-xl);
    background: linear-gradient(180deg, var(--warm-white) 0%, var(--blush-50) 100%);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-5xl);
  }
  
  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--space-lg);
  }
  
  .section-subtitle {
    font-size: 1.125rem;
    color: var(--gray-600);
    max-width: 700px;
    margin: 0 auto;
  }
  
  .services-grid {
    gap: var(--space-3xl);
    justify-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .grid-auto-fit-lg {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    justify-content: center;
  }
  
  .service-card {
    position: relative;
    padding: var(--space-3xl) var(--space-xl);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 400px;
  }
  
  .service-badge {
    position: absolute;
    top: var(--space-lg);
    right: var(--space-lg);
    padding: var(--space-xs) var(--space-md);
    font-size: var(--text-xs);
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .service-icon {
    margin-bottom: var(--space-lg);
  }
  
  .service-title {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-sm);
    color: var(--mauve-700);
    font-family: var(--font-display);
    font-weight: var(--font-weight-bold);
  }
  
  .service-price {
    font-size: var(--text-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--blush-600);
    margin-bottom: var(--space-xl);
    width: 100%;
    text-align: center;
  }
  
  .service-description {
    color: var(--mauve-600);
    margin-bottom: var(--space-xl);
    line-height: 1.6;
    max-width: 400px;
  }
  
  .service-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-xl) 0;
    text-align: left;
    width: 100%;
    max-width: 350px;
  }
  
  .service-features li {
    padding: var(--space-sm) 0;
    gap: var(--space-sm);
    color: var(--mauve-700);
    display: flex;
    align-items: flex-start;
  }
  
  .service-features i {
    color: var(--blush-500);
    font-size: 0.875rem;
    margin-top: 0.25rem;
    flex-shrink: 0;
  }

  .service-card .btn {
    margin-top: auto;
  }
  
  @media (max-width: 768px) {
    .services {
      padding: var(--space-5xl) var(--space-lg);
    }
    
    .services-grid {
      max-width: 100%;
    }
    
    .grid-auto-fit-lg {
      grid-template-columns: 1fr;
      justify-items: center;
    }
    
    .service-card {
      max-width: 100%;
    }
  }
  
  @media (min-width: 769px) and (max-width: 1024px) {
    .grid-auto-fit-lg {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1025px) {
    .grid-auto-fit-lg {
      grid-template-columns: repeat(3, 1fr);
    }
  }
{% endstyle %}

